<h2>
    Create
</h2>
<style type="text/css">
    .validationMessage {
        color: red;
        font-size: 13px;
        padding: 5px 5px;
        margin-top: 7px;
    }
</style>
   
<fieldset>
    <legend>Create Student</legend>
    <input type="hidden" data-bind="value: Id" class="form-control" id="id" />
    <div class="editor-label">
        Name
    </div>
    <div class="editor-field">
        <input data-bind="value: Name" class="form-control" id="name" />
    </div>
    <div class="editor-label">
        City
    </div>
    <div class="editor-field">
        <input data-bind="value: City" class="form-control" id="city" />
    </div>
    <div class="editor-label">
        Address
    </div>
    <div class="editor-field">
        <input data-bind="value: Address" class="form-control" id="address" />
    </div>
    <div class="editor-label">
        Gender
    </div>
    <div class="editor-field">
        <input type="radio" name="flavorGroup" value="Male" data-bind="checked: Gender" id="male"/> Male
        <input type="radio" name="flavorGroup" value="Female" data-bind="checked: Gender" id="female"/> Female
    </div>

    <div class="editor-label">
        Department
    </div>
    <div class="item ">
        <select data-bind="options: Departmentval, value:Department ,optionsCaption: 'Select Department'" id="dept" class="form-control"></select>
    </div>
    <div class="editor-label">
        Date
    </div>
    <div class="editor-field">
   <input data-bind="value: Date" type="date"  class="form-control datepicker" id="date"/>
    </div>
<br />
    <p>
        <input type="button" value="Create" data-bind="click: SaveStudent" id="create" class="btn btn-default">
            
        
        <input type="button" value="Save" data-bind="click: saveedit" id="edit" class="btn btn-default">
            
        
    </p>
</fieldset>
<div id="Grid">
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>City</th>
                <th>Address</th>
                <th>Gender</th>
                <th>Department</th>
                <th>Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody data-bind="foreach: Students">
            <tr>
                <td data-bind="text: Name"></td>
                <td data-bind="text: City"></td>
                <td data-bind="text: Address"></td>
                <td data-bind="text: Gender"></td>
                <td data-bind="text: Department"></td>
                <td data-bind="text: Date"></td>
                <td>
                    <button type="button" data-bind="click: editStudent">Edit</button>
                    <button type="button" data-bind="click: deleteStudent">Delete</button>
                </td>
            </tr>
        </tbody>
    </table>

    @*<button type="button" data-bind="click: exportpdf">ExportPdf</button>*@
    <div style=" display:flex; column-gap:10px">
        @using (Html.BeginForm("Export", "Studentinfoes", new { id = "pdf" }, FormMethod.Get))
        {
            <input type="submit" id="btnSubmit" value="Export pdf" />
        }
        @using (Html.BeginForm("Export", "Studentinfoes", new { id = "excel" }, FormMethod.Get))
        {
            <input type="submit" id="btnSubmit" value="Export excel" />
        }
    </div>
</div>






@section Scripts {
<script src="~/Scripts/jquery-3.7.0.js"></script>
<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/knockout-3.5.1.js"></script>
<script src="~/Scripts/knockout.validation.js"></script>
    <script src="~/Scripts/viewmodel/creatvm.js" type="text/javascript"></script>
}