@model HospitalManagement.Hospital

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title>Delete</title>
</head>
<style>
    * {
        margin: 0 0 0;
    }

    .header {
        width: 100vw;
        height: 10vh;
        /*border: solid red;*/
        display: flex;
        flex-direction: row;
        background-color: lightblue;
    }

    .logo {
        width: 10vw;
        /*border: solid red;*/
    }

    .heading {
        width: 85vw;
        /*border: solid blue;*/
        display: flex;
        flex-direction: row;
        justify-content: center;
        font-size: 40px;
    }

    .dl-horizontal {
        width: 40vw;
        height: 40vh;
        /*border: solid black;*/
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        position: relative;
        margin-top: 20px;
    }

    .ques-ans {
        /*border: solid blue;*/
        display: flex;
        flex-direction: row;
    }

    .ques {
        width: 15vw;
        /*border: solid green;*/
    }

    .ans {
        width: 20vw;
        /*border: solid yellow;*/
    }
</style>
<body>
    <div>
        <div class="header">
            <div class="logo">
                <img style="width:100%; height:100%" src="https://t3.ftcdn.net/jpg/05/14/36/48/360_F_514364850_xLOQX6SOY2qcjAIcTowsi3xYvHmhmvs0.jpg" />

            </div>
            <div class="heading">
                Hospital Management
            </div>
        </div>
        <hr />
        <h2>Are you sure you want to delete this Hospital?</h2>

        <div class="dl-horizontal">
            <div class="ques-ans">
                <div class="ques">
                    @Html.DisplayNameFor(model => model.HospitalName)
                </div>

                <div class="ans">
                    @Html.DisplayFor(model => model.HospitalName)
                </div>
            </div>

            <div class="ques-ans">
                <div class="ques">
                    @Html.DisplayNameFor(model => model.HospitalSpeciality)
                </div>

                <div class="ans">
                    @Html.DisplayFor(model => model.HospitalSpeciality)
                </div>
            </div>

            <div class="ques-ans">
                <div class="ques">
                    @Html.DisplayNameFor(model => model.HospitalAddress)
                </div>

                <div class="ans">
                    @Html.DisplayFor(model => model.HospitalAddress)
                </div>
            </div>

            <div class="ques-ans">
                <div class="ques">
                    @Html.DisplayNameFor(model => model.HospialCity)
                </div>

                <div class="ans">
                    @Html.DisplayFor(model => model.HospialCity)
                </div>
            </div>
            <div class="ques-ans">
                <div class="ques">
                    @Html.DisplayNameFor(model => model.HospitalContactNumber)
                </div>

                <div class="ans">
                    @Html.DisplayFor(model => model.HospitalContactNumber)
                </div>
            </div>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" style="position:relative; margin-left:200px"  />
            </div>
            <br />
            <br />

            <button>@Html.ActionLink("Back to List", "Index")</button>

        }
    </div>
</body>
</html>
