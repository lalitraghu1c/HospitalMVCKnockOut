@model IEnumerable<HospitalManagement.Hospital>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/knockout-3.5.1.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title>Index</title>
</head>
<style>
    * {
        margin: 0 0 0;
    }

    .header {
        width: 100vw;
        height: 10vh;
        /*border: solid red;*/
        display: flex;
        flex-direction: row;
        background-color: lightblue;
    }

    .logo {
        width: 10vw;
        /*border: solid red;*/
    }

    .heading {
        width: 85vw;
        /*border: solid blue;*/
        display: flex;
        flex-direction: row;
        justify-content: center;
        font-size: 40px;
    }
</style>
<body>
    <div class="header">
        <div class="logo">
            <img style="width:100%; height:100%" src="https://t3.ftcdn.net/jpg/05/14/36/48/360_F_514364850_xLOQX6SOY2qcjAIcTowsi3xYvHmhmvs0.jpg" />
        </div>
        <div class="heading">
            Hospital Management
        </div>
    </div>
    <hr />
    <table class="table table-bordered table-hover">
        <tr style="background-color:lightpink">
            <th>
                @Html.DisplayNameFor(model => model.HospitalId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HospitalName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HospitalSpeciality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HospitalAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HospialCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HospitalContactNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HospitalArea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfJoinin)
            </th>
            <th>Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr style="background-color:lightcyan">
                <td>
                    @Html.DisplayFor(modelItem => item.HospitalId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HospitalName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HospitalSpeciality)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HospitalAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HospialCity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HospitalContactNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HospitalArea)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfJoinin)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.HospitalId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.HospitalId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.HospitalId })
                </td>
            </tr>
        }

    </table>
    <button>
        @Html.ActionLink("Create New", "Create")
    </button>
</body>
</html>
