@model IEnumerable<HospitalManagement.Hospital>

@{
    Layout = null;
}

<!DOCTYPE html>
<meta name="viewport" content="width=device-width" />
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/knockout/3.5.1/knockout-min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet"
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>Index</title>
</head>
<style>
    * {
        margin: 0 0 0;
    }

    .header {
        width: 100vw;
        height: 10vh;
        /*border: solid red;*/
        display: flex;
        flex-direction: row;
        background-color: lightblue;
    }

    .logo {
        width: 10vw;
        /*border: solid red;*/
    }

    .heading {
        width: 85vw;
        /*border: solid blue;*/
        display: flex;
        flex-direction: row;
        justify-content: center;
        font-size: 40px;
    }
</style>
<body>
    <div class="header">
        <div class="logo">
            <img style="width:100%; height:100%" src="https://t3.ftcdn.net/jpg/05/14/36/48/360_F_514364850_xLOQX6SOY2qcjAIcTowsi3xYvHmhmvs0.jpg" />
        </div>
        <div class="heading">
            Hospital Management
        </div>
    </div>
    <hr />
    <button>@Html.ActionLink("Add Hospital", "Create")</button>
    <br /><br />
    <div class="table-container table-bordered">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.HospitalName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.HospitalSpeciality)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.HospitalAddress)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.HospialCity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.HospitalContactNumber)
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HospitalName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HospitalSpeciality)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HospitalAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HospialCity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HospitalContactNumber)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.HospitalId }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.HospitalId }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.HospitalId })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script>
        var viewModel = function () {
            var self = this;
            self.hospitals = ko.observableArray(@Html.Raw(Json.Encode(Model)));
        };
        ko.applyBindings(new viewModel());
    </script>
</body>
</html>
